root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{html,css,scss,js,ts}]
indent_style = space
indent_size = 2

[*.{js,ts}]
quote_type = single

[*.html]
insert_final_newline = false

[*.md]
trim_trailing_whitespace = false

[*.sh]
indent_style = tab
indent_size = 4

[*.cs]
indent_style = space
indent_size = 4
